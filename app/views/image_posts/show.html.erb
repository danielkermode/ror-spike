<p>
  <strong>Hi,</strong>
  <%= @user.username %>
</p>

<h2>Post an image:</h2>
<%= form_for([@user, @user.image_posts.build]) do |f| %>
  <p>
    <%= f.label :comment %><br>
    <%= f.text_field :comment %>
  </p>
  <p>
    <%= f.label :url %><br>
    <%= f.text_area :url %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>